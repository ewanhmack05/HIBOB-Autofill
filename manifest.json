{
	"manifest_version": 3,
	"name": "HiBob Project Filler",
	"version": "1.4.4",
	"description": "Auto-fills HiBob Project, Project task, and Reason when the modal opens. Robust retries + settle delays.",

	"permissions": ["storage", "scripting", "activeTab", "contextMenus", "webRequest"],

	"host_permissions": ["https://app.hibob.com/*", "https://*.hibob.com/*", "https://hibob.com/*"],

	"action": {
		"default_title": "HiBob Project Filler",
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png"
		}
	},

	"background": {
		"service_worker": "background.js"
	},

	"content_scripts": [
		{
			"matches": ["https://*.hibob.com/*", "https://hibob.com/*"],
			"js": ["content.js"],
			"run_at": "document_idle",
			"all_frames": true
		}
	],

	"commands": {
		"fill-hibob": {
			"suggested_key": { "default": "Ctrl+Shift+Y", "mac": "Command+Shift+Y" },
			"description": "Fill Project, Project task, Reason"
		}
	},

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
